{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-native",
      "module": "es2015",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "outDir": "build",
      "paths": {
        "~/*": ["src/*"]
      },
      "pretty": true,
      "rootDir": "src",
      "strict": true,
      "target": "es2015"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "typings/**/*.d.ts"],

"exclude": [
    "node_modules",
    "node_modules/*",
    "**/*.spec.ts",
    "../wwwroot/app",
],

}
